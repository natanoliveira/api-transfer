generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  COMMON
  MERCHANT
}

enum TransferStatus {
  PENDING
  COMPLETED
  FAILED
}

model User {
  id           Int        @id @default(autoincrement())
  fullName     String
  cpf          String     @unique
  email        String     @unique
  passwordHash String
  type         UserType
  wallet       Wallet?
  transfersOut Transfer[] @relation("TransferPayer")
  transfersIn  Transfer[] @relation("TransferPayee")
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Wallet {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  balance   Decimal  @default(0)
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transfer {
  id        Int            @id @default(autoincrement())
  payerId   Int
  payeeId   Int
  value     Decimal
  status    TransferStatus
  payer     User           @relation("TransferPayer", fields: [payerId], references: [id])
  payee     User           @relation("TransferPayee", fields: [payeeId], references: [id])
  createdAt DateTime       @default(now())
}
